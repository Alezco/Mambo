@using Mambo.Models;
@model ResourceCreationModel

<br />
<hr />

@if (Mambo.Models.SessionBag.Current.Resources != null)
{
    <h3>@Resource.addResource @Mambo.Models.SessionBag.Current.Resources.Count</h3>
}
else
{
    <h3>@Resource.addResource 0</h3>
}

@using (Html.BeginForm("CreateResource", "BackOffice"))
{
    @Html.AntiForgeryToken()

    <form>
        <div class="form-group">
            <label class="control-label col-md-2">@Resource.title</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MediaName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MediaName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            <label class="control-label col-md-2">@Resource.description</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MediaDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MediaDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br />
        <div class="form-group">
            <label class="control-label col-md-2">@Resource.path</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MediaPath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MediaPath, "", new { @class = "text-danger" })
            </div>
        </div>
        <br /><br /><br />
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="@Resource.add" class="btn btn-primary" />
                <br /> <br />
            </div>
        </div>

    </form>
}

